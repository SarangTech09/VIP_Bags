<%- include('./partials/header') %>

<!-- Error & Success Messages -->
<% if (error.length > 0) { %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 shadow-md z-10">
        <span class="text-white">
            <%= error[0] %> <!-- Display the first error message -->
        </span>
    </div>
<% } %>

<% if (success.length > 0) { %>
    <div class="absolute top-5 left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 shadow-md z-10">
        <span class="text-white">
            <%= success[0] %> <!-- Display the first success message -->
        </span>
    </div>
<% } %>

<!-- Main Content -->
<div class="w-full h-auto flex flex-col md:flex-row px-5 md:px-20 pt-20 md:pt-0">

    <!-- Left Section: Register Form -->
    <div class="w-full md:w-1/2 flex items-center justify-center mb-10 md:mb-0">
        <div class="w-full px-6 md:px-16">
            <h3 class="text-3xl md:text-4xl font-semibold mb-4">Welcome to <span class="text-blue-500">Scatch</span></h3>
            <h4 class="text-lg md:text-2xl mb-5">Create your account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
                    type="text" placeholder="Full Name" name="fullname" required>
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="bg-zinc-100 block w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
                    type="password" placeholder="Password" name="password" required>
                <input 
                    class="px-5 rounded-full py-3 mt-4 bg-blue-500 text-white w-full hover:bg-blue-600 transition duration-300"
                    type="submit" value="Create My Account">
            </form>
        </div>
    </div>

    <!-- Right Section: Login Form -->
    <div class="w-full md:w-1/2 flex items-center justify-center">
        <div class="w-full px-6 md:px-16">
            <h4 class="text-lg md:text-2xl capitalize mb-5">Login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
                    type="email" placeholder="Email" name="email" required>
                <input
                    class="block bg-zinc-100 w-full px-3 py-2 border-[1px] rounded-md mb-3 border-zinc-200 focus:outline-none focus:ring-2 focus:ring-blue-500 transition duration-300"
                    type="password" placeholder="Password" name="password" required>
                <input
                    class="px-5 block rounded-full py-3 mt-4 bg-blue-500 text-white w-full hover:bg-blue-600 transition duration-300"
                    type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
